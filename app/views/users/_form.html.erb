<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

	<ul>
		<% @user.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div id="divsingup"> 
<h1>Sing Up</h1>  
  <% flash.each do |name, msg| %>
		<%= content_tag :div, msg, :id => "flash#{name}" %>
		<% end %>
<div class="field">
	<p class="label"><%= f.label :name %></p>
	<p class="txt"><%= f.text_field :name %></p>
</div>
<div class="field">
	<p class="label"><%= f.label :login %></p>
	<p class="txt"><%= f.text_field :login %></p>
</div>
<div class="field">
	<p class="label"><%= f.label :email %></p>
	<p class="txt"><%= f.text_field :email %></p>
</div>
<div class="field">
	<p class="label"><%= f.label :password %></p>
	<p class="txt"><%= f.password_field :password %></p>
</div>
<div class="field">
	<p class="label"><%= f.label :password_confirmation %>  </p>
    <p class="txt"><%= f.password_field :password_confirmation %>  </p>
</div>
<div class="actions">
	<%= f.submit %> <%= link_to "Back", root_path %>
</div>

</div>
<% end %>